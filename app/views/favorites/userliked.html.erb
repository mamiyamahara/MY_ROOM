<div class= "container">

    <div class= "row justify-content-center" style= "margin-bottom: 50px;">
       <h3><strong>いいねしてくれたアカウント</strong></h3>
    </div>


    <% @userList.each do |user| %>
        <div class="row justify-content-center p-3">
            <div class= "col-lg-3"></div>

            <div class="col-lg-1">
                <%= link_to user_path(user) do %>
                	<%= attachment_image_tag user, :profile_image, :fill, 55, 55, format: "jpg", class: "rounded-circle" %>
                <% end %>
            </div>

            <div class="col-lg-3 text-left" style= "margin-top: 15px; font-size: 15px;">
                <%= link_to user_path(user) do %>
                    <%= user.name %>
                <% end %>
            </div>

            <div class="col-lg-2 text-right" style= "margin-top: 12px;">
                <% if user != current_user %>
                    <% if current_user.following?(user) %>
                        <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-dark btn-sm" %>
                    <% else %>
                        <%= link_to "＋フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-outline-secondary btn-sm" %>
                    <% end %>
                <% end %>
            </div>

            <div class= "col-lg-3"></div>
        </div>
    <% end %>
</div>